<h1>Most Popular Movies</h1>
<hr />
<% @movies.each do |movie| %>
  <div class="row">
    <div class="col-1 align-self-center">
      <div class="text-center">
        <%= image_tag(movie[:image], class: "img-thumbnail") unless movie[:image].nil? %>
      </div>
    </div>
    <div class="col-11 align-self-center">
      <h5><%= movie[:title] %> <%= movie[:year] %></h5>
      <span class="badge badge-warning" style="margin-bottom:15px;"><%= movie[:score] %></span>
      <br />
      <%= link_to "IMDb", "https://www.imdb.com/title/#{movie[:imdb]}/", target: "_blank", class: "btn btn-secondary" %>
      <%= link_to "Add", watched_movies_new_path(movie[:imdb], title: movie[:title]), class: "btn btn-success" %>
    </div>
  </div>
  <% unless @movies.last == movie %>
    <hr />
  <% end %>
<% end %>
